<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.smartcart2">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/smart_cart"
        android:supportsRtl="true"
        android:theme="@style/Theme.SmartCart2">
        <activity android:name=".BrCodeActivity"
            android:theme="@style/NoActionBar"></activity>
        <activity android:name=".LoginActivity" />
        <activity android:name=".sign_up" />
        <activity
            android:name=".RetreiveDataActivity"
            android:label="Your Cart"></activity>
        <activity
            android:name=".Carts"
            android:label="Select the Cart"></activity>
        <activity
            android:name=".MainActivity"
            android:label="Smart Cart"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>